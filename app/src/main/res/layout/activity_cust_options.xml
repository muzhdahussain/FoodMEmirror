<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.foodme.CustOptions">


    <Button
        android:id="@+id/bttn_customerHistory"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="194dp"
        android:text="View Order History" />

    <Button
        android:id="@+id/bttn_newOrder"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bttn_customerHistory"
        android:onClick="openCustomerMenu"
        android:text="Create New Order" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bttn_newOrder"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="Please choose an option."
        android:textAlignment="center"
        android:textSize="18sp" />


</RelativeLayout>

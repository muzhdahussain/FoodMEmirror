<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.foodme.CustomerHistory">


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/progressBar2"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/progressBar2">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/progressBar2"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="13dp"
        android:onClick="showOrder"
        android:text="View Order" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bttn"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bttn"
        android:layout_toStartOf="@+id/bttn"
        android:text="Select an order, then click 'View Order'"
        android:textSize="18sp" />


</RelativeLayout>